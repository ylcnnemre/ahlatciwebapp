@model ahlatciapp.Models.TestModel


<body>
    <form id="myForm">
        <input type="text" placeholder="isim gir" id="Name" />
        <p id="pet"></p>
        <button type="button" id="submitButton">Tıkla</button>
    </form>


    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#submitButton").click(function () {
                var name = $("#Name").val(); // Input değerini al

                var dataToSend = {
                    Name: "MerhabaEmre" // TestModel'inizi buraya göre ayarlayın
                };

                $.ajax({
                    type: "POST",
                    url: "/Home/TestKayit",
                    contentType: "application/json",
                    data: JSON.stringify(dataToSend),
                    success: function (response) {
                        console.log("response ==>",response)
                        // Sunucudan gelen veriyi işleyin (örneğin, bir paragrafa yazdırabilirsiniz)
                        $("#result").text(JSON.stringify(response));
                    },
                    error: function (error) {
                        console.log("Hata: ", error);
                    }
                });



            });

            $("#myForm").submit(function (e) {
                e.preventDefault(); // Formun normal submitini engelle
            });
        });
    </script>

  
    <script src="~/js/wow.min.js"></script>
    <script src="~/js/easing.min.js"></script>
    <script src="~/js/waypoints.min.js"></script>
    <script src="~/js/counterup.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>

</body>
